<h1>Your Cart</h1>
<table class = "table">
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |order_item| %>
    <tr>
      <td><%= link_to "#{order_item.product.prod_name}", product_path(order_item.product.id) %></td>
      <td><%= order_item.product.price %></td>
      <%= form_with model: order_item do |f| %>
      <td><%= f.select :qty, (1..order_item.product.inv_qty).to_a %></td>
          <%= f.hidden_field :product_id, :value => order_item.product.id %>
      <td><%= order_item.subtotal %></td>
      <td><%= f.submit %>
      <td><%= link_to "Update", order_item_path(order_item.id), method: :patch %></td>
        <% end %>
      <td><%= link_to "Remove", order_item_path(order_item.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

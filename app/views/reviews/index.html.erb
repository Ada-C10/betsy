<h2>Product Detail</h2>

<ul>
  <li>Name: <%= "#{@product.name}" %></li>
  <li>Price: <%= "#{@product.price}" %></li>
  <li><%= image_tag @product.photo, alt: @product.name %> </li>
  <li>In Stock: <%= "#{@product.stock}" %></li>
  <li>Category: <%= "#{@product.category}" %></li>
  <li>Rating: <%= "#{@product.rating}" %></li>
  <li>Merchant: <%= "#{@product.merchant.username}" %></li>
</ul>

<section>
  <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %>
</section>

<section>
  <%= form_with model: @order_item, class: 'add-cart-form' do |f| %>

  <%= f.label :quantity %>
  <%= f.text_field :quantity %>

  <%= f.hidden_field :status, value: :pending %>

  <%= f.hidden_field :product_id, value: @product.id %>

  <%= f.submit "Add to cart", class: 'pending' "add-cart-form-submit-button btn btn-primary" %>
  <% end %>
</section>

<section>
  <% if @reviews.empty? %>
    <h3> No Reviews Available. </h3>
  <% else %>
  <ul>
    <% @reviews.each do |review| %>
      <li>
        <ul>
          <li> <%= review.name %> </li>
          <li> <%= review.rating %> </li>
          <li> <%= review.description %> </li>
        </ul>
      </li>
    <% end %>
  </ul>
  <% end %>

  <%= link_to "Add Review", new_product_review_path, class: "btn btn-primary" %>
</section>

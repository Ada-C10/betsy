<h1> <%= action_name %> </h1>


<%= render partial: "layouts/form_errors", locals: { model: @review } %>

<%= form_with model: @review, class: "review-form"  do |f|%>
  <p>Please provide the following information to save your review to our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :rating %>
  <%= f.text_area :rating %>>

  <%= f.label :comment %>
  <%= f.text_field :comment%>

  <%= f.submit button_title, class: "btn btn-primary" %>
<% end %>

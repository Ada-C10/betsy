<div class="banner slider">
  <div id="demo" class="carousel slide" data-ride="carousel"  data-interval="false">

    <!-- Indicators -->
    <ul class="carousel-indicators">
      <li data-target="#demo" data-slide-to="0" class="active"></li>
      <li data-target="#demo" data-slide-to="1"></li>
      <li data-target="#demo" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag("pg7.jpg", alt: "plate of pasta") %>
        <div class="carousel-caption">
          <div class="col-md-7">
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag("bg9.jpg", alt: "making fettuccine") %>
        <div class="carousel-caption">
          <div class="col-md-7">
            <h1 class="pb-2"><strong>Made with the freshest ingredients. </strong> </h1>
            <h4>Our pasta is hand-picked from only the best producers in the world.</h4>
            <div class="btn-group">
              <%= link_to "See our products", products_path, class: "btn btn-products mt-4 btn-space" %>
              <%= link_to "Become a Seller", account_path, class: "btn btn-dark mt-4" %>
            </div>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag("bg8.jpg", alt: "fork of fettuccine") %>
        <div class="carousel-caption">
          <div class="col-md-7">
            <h1 class="pb-2"><strong>Your tummy is rumbling. </strong> </h1>
            <h4>Pick the perfect gift for you loved ones.</h4>
            <div class="btn-group">
              <%= link_to "See our products", products_path, class: "btn btn-products mt-4 btn-space" %>
              <%= link_to "Become a Seller", account_path, class: "btn btn-dark mt-4" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
      <span class="carousel-control-next-icon"></span>
    </a>

  </div>
</div>

<div class="upcoming py-5">
  <div class="container">
    <div class="row pb-4 text-center">
      <div class="col-md-12">
        <h1>Featured Pastas</h1>
        <h4>"Eat pasta to run fasta."</h4>
      </div>
    </div>

    <div class="card-deck">
      <div class="card col-md-4 box border py-4 shadow p-3 mb-5 bg-white rounded">
        <% product = Product.all.find_by(id: 1) %>
        <%= link_to image_tag(product.image_url, alt: "Card image cap", class: "card-img-top"), product_path(product.id) %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.description.capitalize %></p>
        </div>
        <div class="card-footer">
          <small class="text"><%= readable_price(product.price_in_cents) %></small>
        </div>
      </div>
      <div class="card col-md-4 box border py-4 shadow p-3 mb-5 bg-white rounded">
        <% product2 = Product.all.find_by(id: 4) %>
        <%= link_to image_tag(product2.image_url, alt: "Card image cap", class: "card-img-top"), product_path(product2.id) %>
        <div class="card-body">
          <h5 class="card-title"><%= product2.name %></h5>
          <p class="card-text"><%= product2.description.capitalize %></p>
        </div>
        <div class="card-footer">
          <small class="text"><%= readable_price(product2.price_in_cents) %></small>
        </div>
      </div>
      <div class="card col-md-4 box border py-4 shadow p-3 mb-5 bg-white rounded">
        <% product3 = Product.all.find_by(id: 10) %>
        <%= link_to image_tag(product3.image_url, alt: "Card image cap", class: "card-img-top"), product_path(product3.id) %>

        <div class="card-body">
          <h5 class="card-title"><%= product3.name %></h5>
          <p class="card-text"><%= product3.description.capitalize %></p>
        </div>
        <div class="card-footer">
          <small class="text"><%= readable_price(product3.price_in_cents) %></small>
        </div>
      </div>
    </div>
    <div class="row text-center pt-4">
      <div class="col-md-12">
        <%=link_to "View All Pasta", products_path, class: "btn btn-danger"%>
      </div>
    </div>
  </div>
</div>


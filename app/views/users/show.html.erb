
<% if @user.type == "Merchant" %>
  <h1> <%= "#{@merchant.name}'s Good's Distribution Store" %> </h1> <!-- 'storefront if user is merchant' -->
<% else %>
  <h1> Profile Information </h1>
<p>
  Joined site on <%= "#{@merchant.created_at.strftime ("%b. %d, %Y")}" %>
</p>
<% end %>


<table class="table">
  <thead>
    <tr>
        <th>Product Picture</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Category</th>
        <% if !current_user || current_user.id != @merchant.id  %> <!-- this is call to the helper method, not a variable.... -LR -->
          <th>Add to Cart</th>
        <% else %>
          <th>Remove product</th>
          <th>Edit stock</th>
        <% end %>
      </tr>
  </thead>
  <tbody>
    <% @merchant.products.each do |product| %>
    <tr>
      <td> product image </td>
      <td> <%= link_to "#{product.name}", product_path(product.id) %> </td>
      <td> <%= "#{product.stock}" %> </td>
      <td> <%= "#{product.category.name}" %> </td>
      <% if !current_user || current_user.id != @merchant.id %> <!-- allows guess to 'add to cart' -->
        <td> add to cart </td>
      <% else %>
        <td> delete product </td>
        <td> increase stock </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.text_field :email %>


  <%= radio_button_tag(:merchant, true) %>
  <%= label_tag(:merchant, "I would like to sell products") %>
  <%= radio_button_tag(:merchant, false) %>
  <%= label_tag(:merchant, "I don't want to sell products") %>


  <%= f.submit "Save" %>
  <% end %>

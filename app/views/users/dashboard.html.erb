
<!-- Side navigation -->
<div class="sidenav">
  <%= link_to "Add a Product", new_product_path %>
  <%= link_to "My Products", merchant_my_products_path %>
  <%= link_to "My Orders", merchant_orders_path %>
</div>


<!-- Page content -->
<div class="main">
  ...Merchant Dashboard
</div>


<!-- change/remove these however you like-->


<section>
  <p> Total Orders: <%= @total_orders %></p>

  <%= link_to "My Order Page", merchant_orders_path %>

</section>

<section>
  <p> Total Revenue: <%= readable_price(@login_user.total_revenue) %></p>
  <p> Total Revenue for paid orders: <%= readable_price(@login_user.total_revenue_by_paid) %></p>
  <p> Total Revenue for completed orders: <%= readable_price(@login_user.total_revenue_by_completed) %></p>
</section>

<section>
  <p> Orders Awaiting Fulfillment: <%= @total_paid_orders %> </p>

  <% @paid_orders.each do |order| %>
    <%= link_to "Order ##{order.id}", merchant_order_path(order.id) %>
  <% end %>
</section>

<section>
  <p> Completed Orders: <%= @total_completed_orders %> </p>

  <% @completed_orders.each do |order| %>
    <%= link_to "Order ##{order.id}", merchant_order_path(order.id) %>
  <% end %>
</section>

<section>
  <p> Total: <%= @total_products %> Products </p>
</section>

<section>
  <p> <%= @total_active_products %> Active Products </p>

  <% @active_products.each do |product| %>
    <%= link_to "#{product.name}", product_path(product.id) %>
  <% end %>

</section>

<section>
  <p> <%= @total_inactive_products %> Inactive Products </p>

  <% @inactive_products.each do |product| %>
    <%= link_to "#{product.name}", product_path(product.id) %>
  <% end %>

</section>

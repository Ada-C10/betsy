<h1>Orders#edit</h1>
<p>Find me in app/views/orders/edit.html.erb</p>

<%= form_with model: @shopping_cart, url: order_path(@shopping_cart.id) do |f| %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label "Cardholder's Name" %>
      <%= f.text_field :cc_name, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">

      <%= f.label :mailing_address %>
      <%= f.text_field :mailing_address, class: "form-control" %>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>

      </div>

      <div class="form-group col-md-2">
        <%= f.label :cc %>
        <%= f.text_field :cc, class: "form-control" %>
      </div>

      <div class="form-group col-md-4">
        <%= f.label :cc_expiration %>
        <%= f.text_field :cc_expiration, class: "form-control" %>
      </div>

    </div>


    <div class="form-group col-md-2">
      <%= f.label :cvv %>
      <%= f.text_field :cvv, class: "form-control" %>

    </div>

    <div class="form-group col-md-2">
      <%= f.label :zip %>
      <%= f.text_field :zip, class: "form-control" %>
    </div>
  </div>
</div>

<button type="submit" class="btn btn-primary">Continue</button>
<% end %>
</form>

<h2>All done?</h2>
<div><%= link_to "Checkout", edit_order_path(@current_shopper_order_id), data: { confirm: "Are you sure you're done shopping?" }, class: "btn btn-success" %></div>

<% @order_items.order('created_at').each do |item| %>
Item:<% x = Item.find_by(id: item.item_id) %>
<%= x.name%>
<br>
Quantity: <%= item.quantity_per_item %>

<br>


<%= form_with model: @order_item, method: :patch, :url => order_item_path(item.id) do |f| %>

<%= f.text_field :quantity_per_item %>


<%= f.submit "update quantity", class: "btn btn-primary" %>
<%= link_to "Delete Item", order_item_path(item.id), method: :delete, data: { confirm: "are you sure you want to delete this item?" }, class: "btn btn-danger" %>
<% end %>



<br>

<% @order_items.order('created_at').each do |item| %>
Item:<% x = Item.find_by(id: item.item_id) %>
<%= x.name%>
<br>
Quantity available: <%= x.quantity_available %>
<br>
Quantity currently in cart: <%= item.quantity_per_item %>


<br>


<%= form_with model: @order_item, method: :patch, :url => order_item_path(item.id) do |f| %>

<%= f.select :quantity_per_item, x.return_quantity_selection %>

<%= f.submit "update quantity" %>
<% end %>

<%= link_to "Delete Item", order_item_path(item.id), method: :delete, data: { confirm: "are you sure you want to delete this item?" } %>

<br>
<br>
<br>
<% end %>

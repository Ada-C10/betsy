<h1>Your Cart</h1>
<p>Find me in app/views/orders/show.html.erb</p>

<table class="table">
  <thead>
    <tr>
      <th>Product Description</th>
      <th>Quantity</th>
      <th>Remove From Cart</th>
    </tr>
  </thead>
  <tbody>
    <% @orderitems.each do |orderitem| %>
      <tr>
        <td><%= orderitem.product.description %></td>
        <td>

          <%= form_with model: orderitem, url: orderitems_path, class: "cart-quantity-form" do |f|%>
            <%= f.text_field :quantity, value: orderitem.quantity, placeholder: orderitem.quantity, required: true, maxlength: 3 %>
            <%= f.hidden_field :product_id, value: orderitem.product.id %>
            <%= f.submit "Update Cart", class: "cart-quantity-button btn", role: "button" %>
          <% end %>

        </td>
        <td><%= link_to "X", orderitem_path(orderitem), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Checkout", edit_order_path(@order), class: "btn btn-secondary" %>
<%= link_to "Continue Shopping", :back, class: "btn btn-secondary" %>

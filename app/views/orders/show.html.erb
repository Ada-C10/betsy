<div class="container">
  <% if @orderitems.size == 0 %>
    <h2 class="mb-5">Your Cart</h2>
    <p>There are no items in your cart.</p>
  <% elsif !session[:order_id].nil? && @order.status == "pending" %>
    <h2 class="mb-5">Your Cart</h2>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th style="width: 200px"></th>
            <th style="width: 13%">Product</th>
            <th>Product Description</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Price</th>
            <th class="text-center">Remove</th>
          </tr>
        </thead>
        <tbody>
          <% @orderitems.each do |orderitem| %>
            <tr>
              <td><%= image_tag(orderitem.product.image_url, class: "fifty") %></td>
              <td><%= link_to orderitem.product.name, product_path(orderitem.product.id) %></td>
              <td><%= orderitem.product.description %></td>
              <td>

                <%= form_with model: orderitem, url: orderitem_path(orderitem), class: "cart-quantity-form text-center", method: :patch do |f|%>
                  <%= f.text_field :quantity, type: :number, value: orderitem.quantity, placeholder: orderitem.quantity, class: "text-center", required: true, min: 1, max: orderitem.product.inventory, maxlength: 3 %>
                  <%= f.hidden_field :product_id, value: orderitem.product.id %>
                  <%= f.submit "Update", class: "cart-quantity-button btn", role: "button" %>
                <% end %>

              </td>
              <td><%= readable_cost(orderitem.line_item_price) %></td>
              <td class="text-center"><%= link_to "X", orderitem_path(orderitem.id), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr />
    <h6 class="ml-3">
      Total: <%= readable_cost(@order.total_cost) %>
    </h6>

    <hr />
    <%= link_to "Checkout", edit_order_path(@order.id), class: "btn btn-secondary mt-3" %>
    <%= link_to "Continue Shopping", products_path, class: "btn btn-secondary mt-3" %>
  <% else %>
    <h2 class="mb-5">Order Confirmation Page</h2>

    <p><strong>Email: </strong><%= @order.email %></p>
    <p><strong>Placed: </strong><%= readable_date(@order.created_at) %></p>
    <p><strong>Order status: </strong><%= @order.status.capitalize %></p>
    <p><strong>Total Cost: </strong><%= readable_cost(@order.total_cost) %></p>

    <br />

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th style="width: 250px"></th>
            <th style="width: 15%">Product</th>
            <th>Product Description</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Price</th>
          </tr>
        </thead>
        <tbody>
          <% @orderitems.each do |orderitem| %>
            <tr>
              <td><%= image_tag(orderitem.product.image_url, class: "fifty") %></td>
              <td><%= link_to orderitem.product.name, product_path(orderitem.product.id) %></td>
              <td><%= orderitem.product.description %></td>
              <td class="text-center"><%= orderitem.quantity %></td>
              <td class="text-center"><%= readable_cost(orderitem.line_item_price) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

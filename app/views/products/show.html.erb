<h1><%= "#{@product.name}" %></h1>

<div class="card">
  <img class="card-img-top" src=" <%= @product.img_file %> " alt="Image description">

  <div class="card-body">
    <h5 class="card-title"><%= @product.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= number_to_currency(@product.price/100) %></h6>
    <p class="card-text"><%= @product.description %></p>
    Categories go here
    <br >
    Sold by: <a href=" <%= merchant_path(@product.merchant.id) %>"><%= "#{@product.merchant.name}" %></a>
    <br >
    Quantity currently available goes here
    <br>
    Quantity dropdown goes here
    <a href=" <%= product_order_item_path(@product.id) %>  " class="btn btn-primary">Add to cart</a>
  </div>
</div>

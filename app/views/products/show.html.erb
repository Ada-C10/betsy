<h1><%= @product.name.capitalize %></h1>

<section class="table">
<ul>
  <li>
    <%= @product.name %>
  </li>
  <li>
    <%= @product.category %>
  </li>
  <li>
    <%= display_quantity_or_sell_out(@product) %>
  </li>
  <li>
    <%= @product.price %>
  </li>
  <li>
    <%= image_tag ("#{@product.image}") %>
  <li>
    <%= link_to "Edit", edit_product_path(@product.id) %>
  </li>
  <li>
    <%= link_to "Delete", product_path, method: :delete, data: {confirm: "Delete  #{@product.name}?"}  %>
  </li>
</ul>
</section>


<section>

  <%= form_with model: @cart_entry, :url =>  cart_entries_path(product_id:  @product.id)  do |f| %>
    <%= f.label :quantity %>
    <%= f.select :quantity, [*1..@product.quantity] %>


    <%= display_add_to_cart_or_sold_out(@product) %>
  <% end %>
</section>

<%= link_to "Back to Product List", products_path %>
<section>
  <%= form_with model: @review, :url => { :action => :review, :method => :post } do |f| %>
    <%= f.label :rating %>
    <%= f.select :rating, [*1..5] %>

    <%= f.label :comment %>
    <%= f.text_area :comment %>

    <%= f.submit "Submit" %>
  <% end %>
</section>


<section>
<h1>Reviews</h1>

<% @product.reviews.each do |review| %>

<ul>
  <li>
    Review title: <%= review.rating %>
  </li>
  <li>
    Username: <%= review.user_id %>
  </li>
  <li>
    Comments: <%= review.comment %>
  </li>
</ul>
<% end %>
</section>

<section>
  <%= form_with model: @product  do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :photo %>
    <%= f.text_field :photo %>

    <%= f.label :stock %>
    <%= f.text_field :stock %>

    <%= f.label :active %>
    <%= f.check_box :active %>
    
    <%= f.label :description %>
    <%= f.text_area :description %>

  <%= f.label :category %>
  <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>

    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</section>

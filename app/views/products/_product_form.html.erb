<section>
  <%= form_with model: @product  do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div class="form-group">
    <%= f.label :photo %>
    <%= f.text_field :photo %>
  </div>
  <div class="form-group">
    <%= f.label :stock %>
    <%= f.text_field :stock %>
  </div>
  <div class="form-group">
    <%= f.label :active %>
    <%= f.check_box :active %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.label :category %>
  <%= f.select :category_id, Category.all.map{ |category| category.name } %>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
  <% end %>
</section>

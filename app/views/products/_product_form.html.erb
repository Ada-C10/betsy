<section>
  <%= form_with model: @product do |f| %>


    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price%>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :inventory %>
      <%= f.text_area :inventory, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category_ids, "Select all categories that apply" %>
      <%= f.select(:category_ids, Category.all.map { |c| [c.category_name, c.id] }, {}, :multiple => true, class: "form-control") %>
    </div>

    <div class="form-group">
      <%= f.label :upload_photo %>
      <%= f.file_field :photo_url, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit action_type, class: "btn btn-primary" %>
    </div>
  <% end %>
</section>

<%= form_with model: @product, url: merchant_product_path do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.text_field :inventory, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
    </div>

    <div class="form-group">
      <%= f.submit "Update Product", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>

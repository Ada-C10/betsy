<!-- Note:  This code is for initial display only! -->

<section>
  <h1>All Products</h1>
    <% @products.each do |product| %>
      <ul>
        <li><%= link_to product.name, product_path(product) %></li>
        <li>Description: <%= product.description %></li>
        <li>Price: <%= number_to_currency(product.price/100)%></li>
        <li><%= image_tag product.img_file, alt: product.description %></li>
      </ul>
    <% end %>
  </section>

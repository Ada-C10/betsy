<h1>List of Products</h1>

<% @products.each do |product| %>

  <div class="card" style="width: 18rem;">
    <div class="card-header">
      Sold by <%= link_to readable_name(product.merchant.name), merchant_path(product.merchant_id) %>
    </div>
    <%= image_tag(product.image_url, width: 500, alt: product.name, class: "card-img-top") %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to product.name, product_path(product.id) %></h5>
      <p class="card-text"><%= "Description: #{product.description}" %></p>
      <p class="card-text"><%= readable_cost(product.cost) %></p>
    </div>
    <div class="card-footer text-muted">
      <% if product.inventory == 0 %>
        <p>Out of Stock</p>
      <% else %>
        <p><%= "#{product.inventory} in stock" %></p>

      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addToCart" data-whatever="@mdo">Add To Cart</button>

      <div class="modal fade" id="addToCart" tabindex="-1" role="dialog" aria-labelledby="addToCartLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addToCartLabel"><%=product.name %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= image_tag(product.image_url, width: 500, alt: product.name, class: "card-img-top") %>
            </div>
            <div class="modal-footer">
              <div class="form-group">
                <%= form_with model: @orderitem, url: orderitems_path, class: "product-form" do |f|%>

                  <%= f.label :quantity, 'Quantity'%>
                  <%= f.text_field :quantity, type: :number, value: 1, required: true, min: 1, max: product.inventory, maxlength: 3, class: "form-control" %>
                  <%= f.hidden_field :product_id, value: product.id %>
              </div>
                <%= f.submit "Add To Cart", class: "product-button btn btn-primary", role: "button" %>
              <% end %>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      <% end %>
    </div>
  </div>

<% end %>



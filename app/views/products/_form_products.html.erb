<%= form_with model: @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :category %>
  <%= f.select :category, ['Plants', 'Fashion', 'Housewares', 'Lifestyle', 'Beauty'] %>

  <%= f.label :quantity %>
  <%= f.text_field :quantity %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.submit "Save" %>
<% end %>

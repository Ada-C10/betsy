<h2>Reviews</h2>
<div class="review-details-container">

  <div class="review-info">
    <% if @reviews.count > 0 %>
    <% @reviews.each do |r| %>
    <ul>
      <li><%= "Rating:" %></li>
      <% r.rating.to_i.times do  %>
        <i class="fa fa-star"></i>
      <% end %>
      <li><%= "#{r.description}" %></li>
    </ul>
    <% end %>
    <%end %>
  </div>

</div>




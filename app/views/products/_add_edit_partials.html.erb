<%= form_with model: @product, url: product_path do |f| %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>


<div class="form-group">
  <%= f.label :price %>
  <%= f.text_field :price, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :quantity %>
  <%= f.text_field :inventory, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :image %>
  <%= f.text_field :image, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :category %>
  <div class="form-checkboxes">
    <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) do |c| %>
    <%= c.label class:"label-checkbox" do%>
    <%=c.check_box%>  <%=c.text%>
    <%end%>
    <%end%>
  </div>
</div>

<div class="form-group">
  <%= f.submit action_name, class: "btn btn-primary" %>
</div>
<% end %>

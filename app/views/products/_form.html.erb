<% if @current_user %>

  <%= form_with model: @product do |f|%>

  <h2><%= page_title %></h2>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter name"%>
  </div>

  <div class="form-group">
    <%= f.label :stock_count %>
    <%= f.text_field :stock_count, class: "form-control", placeholder: "Enter stock number" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control", placeholder: "Enter price" %>
  </div>

  <div class="form-group">
   <%= f.label :description %>
   <%= f.text_area :description, class: "form-control", placeholder: "Add a description" %>
  </div>

  <div class="form-group">
   <%= f.label :photo_url %>
   <%= f.text_field :photo_url, class: "form-control", placeholder: "Photo url here" %>
  </div>

  <div class="form-group">
   <%= f.label :category_id %>
   <%= f.select :category_id, options_for_select(Category.category_list
  ),
  {}, { class: "form form-group form-control" } %>
  </div>

  <%= f.hidden_field :user_id, :value => @current_user.id %>

  <%= f.submit "Save Creature", class: "btn btn-primary" %>

  <% end %>
<% else %>
  <h3> Hi Animal Mom, sorry, you must be signed in to add inventory to your creature product line. </h3>
<% end %>

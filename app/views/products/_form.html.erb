  <section class="form">
    <% if @product.errors.any? %>
      <ul class="errors">
        <% @product.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @product, class: "form" do |f|%>

        <% Product.category_list.each do |category_name|%>
        <%= f.label category_name %>
        <%= f.radio_button :category_name, category_name, class: ''%>
        <% end %>

        <%= f.label :price %>
        <%= f.text_field :price, class: ""%>

        <%= f.label :name %>
        <%= f.text_field :name, class: ""%>


        <%= f.label :description %>
        <%= f.text_field :description, class: ""%>

        <%= f.label :stock %>
        <%= f.text_field :stock, class: "" %>

        <%# f.label :photo %>
        <%# f.text_field :photo, class: "form__input" %>

      <%= f.submit button_title, class: 'btn'%>
    <% end %>
  </section>
</section>

<section>
  <%= form_with model: @product do |f| %>

  <div class="form-group">

    <%= hidden_field_tag(:merchant_id, @logged_in_merchant.id) %>
  </div>

  <div class="form-group">
    <%= f.label :product_name %>
    <%= f.text_field :name, placeholder: "ex. Licorice Lollipops from Lalaland", class: "form-control" %>
  </div>

  <div class="form_group">
    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |c| %>
    <div class="collection-check-box">
      <%= c.check_box %>
      <%= c.label %>
    </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, as: :currency, placeholder: "ex. 3.50", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, placeholder: "Yummy salmonberry-flavored licorice ropes", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image_http_address %>
    <%= f.text_field :img_file, placeholder: "https://licorice-ropes.com", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
  <% end %>
</section>

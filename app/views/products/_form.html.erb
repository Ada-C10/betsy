<div class="container">
  <section>
    <section>
      <h1 class="no-spacing"><%= action_name %></h1>
      <hr />
    </section>

    <section class="mt-5">
      <%= form_with model: @product do |f|%>
        <div class="form-group row">
          <%= f.label :name, class: "col-md-3 col-form-label"%>
          <div class="col-md-9">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :cost, class: "col-md-3 col-form-label"%>
          <div class="col-md-9">
            <%= f.text_field :cost, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :image_url, class: "col-md-3 col-form-label"%>
          <div class="col-md-9">
            <%= f.text_field :image_url, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :inventory, class: "col-md-3 col-form-label"%>
          <div class="col-md-9">
            <%= f.text_field :inventory, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-md-3 col-form-label"%>
          <div class="col-md-9">
            <%= f.text_field :description, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label "Choose all applicable categories and/or create a new one below:", class: "col-md-3 col-form-label"%>
          <div class="col-md-9">
            <%= f.collection_check_boxes(:category_ids, @categories.all, :id, :name, class: "form-control" ) do |b| %>
              <div>
                <%= b.check_box %>   <%= b.label { b.text } %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, "New Category", class: "col-md-3 col-form-label"%>
          <div class="col-md-9">
            <%= f.text_field :category, class: "form-control" %>
          </div>
        </div>

        <%= f.hidden_field :merchant_id, value: session[:user_id] %>

        <div class="row">
          <div class="col-sm-9 offset-sm-3">
            <%= f.submit "Add", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </section>
  </section>
</div>

<%= render partial: 'layouts/form_errors',
locals: {
  model: @item
}
%>

<%= form_with model: @item, method: :post, :url => items_path(@item.id) do |f| %>


  <%= f.label :Name %>
  <%= f.text_field :name %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :quantity_available %>
  <%= f.text_field :quantity_available %>
  <%= f.label :image_url %>
  <%= f.text_field :image %>
  <%= f.label :active %>
  <%= f.text_field :active %>
  <%= f.label :categories%>
  <%= f.select :category_type, selections: Item::VALID_CATEGORIES %>
  <%= f.label :description %>
  <%= f.text_area :description %>




  <%= f.submit action_type, class: "item-form-submit-button" %>

<% end %>

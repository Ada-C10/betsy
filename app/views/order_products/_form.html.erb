<section>
  <% if op_id %>
    <% @op = @current_order.order_products.find_by(id: op_id) %>
  <% end %>
  <%= form_with model: @op, class: "form", locals: true do |f|%>
    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.select :quantity, [1, 2, 3, 4, 5], {}, class: "form-control" %>
    </div>

    <%= f.hidden_field :product_id, value: product_id %>

    <%= f.submit button_title, class: "btn btn-primary" %>
  <% end %>
</section>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"> <%= "Products from #{@category.name}" %> </h1>
    <p class="lead"><%= %> </p>
  </div>
</div>


<div class="card-columns">
  <% @category.products.each do |p|  %>
  <% if p.status %>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src=" <%= find_image_for(p) %> " alt="Snack Image">
    <div class="card-body">
      <h5 class="card-title"><%=link_to p.name, product_path(p.id) %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= number_to_currency(p.price) %></h6>
      <% if p.average_rating %>
      <p><%= "Average rating:" %></p>
        <% p.average_rating.to_i.times do %>
          <i class="fa fa-star"></i>
        <% end %>
      <% else %>
        <p><%= "No reviews yet" %></p>
      <% end %>
      <p class="card-text"><%= p.description %></p>
      <a class="card-merchant" href=" <%= merchant_path(p.merchant.id) %>"><%= "#{p.merchant.name}" %></a>
      <a class="card-details" href=" <%= product_path(p.id) %>">Details</a>
    </div>
  </div>
  <% end  %>
  <% end %>

</div>

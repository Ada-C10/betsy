<section class="main-body">

<%= render partial: 'layouts/jumbotron',
locals: {
  model: @category
}
%>

<div class="card-columns">
  <% @category.products.each do |product| %>
    <% if product.status %>
      <%= render partial: 'layouts/product_cards', locals: { product: product }%>
      <% end %>
  <% end %>
</div>

</section>

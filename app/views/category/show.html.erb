<section>

  <h2>
    <%=  @category.category_type.capitalize %>
  </h2>

  <div class="item_by_category">
    <% @items_in_category.each do |item| %>

    <!-- <div class="image_by_category"> -->
    <div class = "test">
      <img class = "category_images" src= "<%= item.image %>" class="img-thumbnail item_show"  alt="<%= item.name %>
      <%= item.description %>">

      <p class="title"><%= item.name %></p>
      <div class="overlay"></div>
      <div class = "button"><%= link_to "Details", item_path(item.id) %></div>

    </div>

    <% end %>
  </div>
</section>

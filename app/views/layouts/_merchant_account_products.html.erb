<h3>Products</h3>
<table>
  <thead>
    <td>
      Name
    </td>
    <td>
      Inventory
    </td>
    <td>
      Price
    </td>
    <td>
      Status
    </td>
    <td>

    </td>
    <td>

    </td>
  </thead>
  <tbody>

<!-- QUESTION: render partial the repeated code below to DRY it up? -->
<% @merchant.products.each do |product| %>
  <tr>
    <td>
      <%= link_to product.name, product_path(product) %>
    </td>
    <td>
      <%= product.inventory %>
    </td>
    <td>
      <!-- TODO: do some work to display it nicely -->
      <%= product.price %>
    </td>
    <td>
      <!-- TODO: change true to show as active/available and false to show as discontinued/unavailable -->
      <%= product.status %>
    </td>

      <td>
        <%= link_to "Edit", edit_product_path(product.id) %>
      </td>
      <!-- TODO: decide if link here should change column from true to false -->
      <td>
        <%= link_to "Delete", product_path(product.id), method: :delete, data: {
          confirm: "Are you sure you want to delete this entry #{product.name}?" }, class: "btn btn-danger" %>
      </td>
    <% end %>

  </tr>
</tbody>
</table>

<header class="home-page">
  <nav class="navbar navbar-dark navbar-expand-md fixed-top scrolling-navbar">
    <%= link_to '<i class="fa fa-home fa-lg"></i>'.html_safe, root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%= link_to "Shop", products_path, class: "nav-link" %>
        </li>
        <% if session[:user_id] %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              My Seller Account
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to "View My Store", merchant_products_path(session[:user_id]), class: "dropdown-item" %>
              <%= link_to "My Seller Dashboard", dashboard_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <% if session[:order_id] %>
                <%= link_to "Log Out", logout_path, method: "delete", class: "dropdown-item", data: {confirm: "Are you sure? You will lose all items in your cart."} %>
              <% else %>
                <%= link_to "Log Out", logout_path, method: "delete", class: "dropdown-item" %>
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Seller Login", "/auth/github", class: "nav-link"%>
          </li>
        <% end %>
        <% if session[:order_id] %>
          <li class="nav-item">
            <%= link_to '<i class="fa fa-shopping-cart"></i>'.html_safe, order_path(session[:order_id]), class: "nav-link d-inline-block" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to '<i class="fa fa-shopping-cart"></i>'.html_safe, order_path("cart"), class: "nav-link d-inline-block" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="view">
    <div class="mask rgba-black-light d-flex justify-content-center align-items-center">
      <div class="container">
        <div class="row responsive-title">
          <div class="col-md-12 mb-4 text-white text-center">
            <h1 class="h1-reponsive text-white text-uppercase font-weight-bold mb-0 pt-md-5 pt-5">No Regretsy</h1>
            <hr class="hr-light my-4">
            <h5 class="text-uppercase mb-4 text-white"><strong>choose your adventure</strong></h5>
            <%= form_tag search_path, method: :get, class: "form" do %>
              <div class="md-form my-0">
                <%= text_field_tag(:search, params[:search], class: "form-control mr-sm-2 splash-search", placeholder: "Where do you want to go?") %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

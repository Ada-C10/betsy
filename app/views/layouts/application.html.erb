<!DOCTYPE html>
<html>
  <head>
    <title>Betsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>

  <header>
    <nav class="top-bar">

      <div class="top-bar-left">
        <%= link_to("Adoptsy", products_path, class: "menu-text") %>
      </div>

      <div class="top-bar-right">
        <ul class="vertical medium-horizontal menu" data-responsive-menu="accordion medium-dropdown">
          <li>
            Browse
            <ul class="vertical menu">
              <li><%= link_to "All Products", products_path %></li>
              <li><%= link_to "By Seller", users_path %></li>
              <li><%= link_to "By Category", categories_path %></li>
            </ul>
          </li>

          <ul>
            <% if logged_in? %>
              <li><%= link_to "Logged in as #{@current_user.name}", user_path(@current_user.id), class: "btn btn-primary" %></li>
              <li><%= link_to "Log Out", logout_path, method: :delete, data: { confirm: "Are you sure you want to log out?" }, class: "btn btn-primary" %></li>
            <% else %>
              <li><%= link_to "Log In", "/auth/github", class: "btn btn-primary" %></li>
            <% end %>
          </ul>

        </ul>
      </div>

    </nav>
</header>

<main>
  <section class="flash">
    <% flash.each do |name, message| %>
    <div class="<%= name %>"><%= message %></div>
    <% end %>
  </section>

  <%= yield %>
</main>

<footer>
  <h6>&copy; 2018 Adoptsy</h6>
</footer>

</body>
</html>

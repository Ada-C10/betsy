                    <% end %>
                  </div>
                </li>
                <li>
                  <a class="nav-link dropdown-toggle" data-toggle="dropdown">Shop by Category</a>
                  <div class="dropdown-menu" >
                    <% @categories.each do |category| %>
                      <%= link_to "#{category.category}", category_path(category.id), class: "dropdown-item" %>
                    <% end %>
                  </div>

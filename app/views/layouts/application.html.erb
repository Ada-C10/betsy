<!DOCTYPE html>
<html>

<head>
  <title>Fibonoshi</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <link href="https://fonts.googleapis.com/css?family=Karla" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Lora|Roboto:400,700" rel="stylesheet">
</head>




<body>

    <header class="app-header">

      <nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-custom">

        <a class="navbar-brand" href="<%= root_path %>">Fibonoshi</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Browse Countries
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% @categories.each do |c| %>
                <a class="dropdown-item" href="<%= category_path(c.id) %>"><%= "#{c.name.capitalize}" %></a>
                <% end %>
              </div>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Browse Merchants
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% @merchants.each do |m| %>
                <a class="dropdown-item" href="<%= merchant_path(m.id) %>"><%= "#{m.name.capitalize}" %></a>
                <% end %>
              </div>
            </li>
              <li class="nav-item">
                <a class="nav-link" href="<%= products_path%>"> All Products</a>
              </li>

          </ul>

          <ul class="navbar-nav navbar-right">
            <li class="nav-item"><a class="nav-link" href="/auth/github">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="<%= logout_path %>">Logout</a></li>
            <li class="nav-itm">
              <a class="nav-link" href="<%= orders_path %>"><%= image_tag("shopping-cart.svg")%> <%= @orders.count %></a></li>
          </ul>

        </div>
      </nav>

      <div class="app-carousel-container">

        <div id="app-slider" class="carousel slide" data-ride="carousel">

          <ol class="carousel-indicators">
            <li data-target="#app-slider" data-slide-to="0" class="active"></li>
            <li data-target="#app-slider" data-slide-to="1"></li>
            <li data-target="#app-slider" data-slide-to="2"></li>
          </ol>


          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="/assets/marshmallow-4ab4e766679fee16a12d850cfb1a74c9d2a6d649b877e5c0054243c90f5292c5.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/assets/gummyworm-81faeba9db63e987d0da4dac4dd7f34bfefd63c942ec15dc4ec0df23948a4cca.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/assets/lollipop-b462e9ff485a7fa98aa6eaf964f93445db930a39584cd3c5b08a62eda10c08f8.jpg" alt="Third slide">
            </div>
          </div>


          <a class="carousel-control-prev" href="#app-slider" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#app-slider" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

      </div>

    </header>



  <% if flash[:result_text] or flash[:messages] %>
    <section class="alert__container">
      <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
        <span><%= flash[:status].to_s == "failure" ? "A problem occurred: " : "" %><%= flash[:result_text] %></span>
        <% if flash[:messages] %>
        <ul>
          <% flash[:messages].each do |name, problems| %>
          <% problems.each do |problem| %>
          <li><%= name %>: <%= problem %></li>
          <% end %>
          <% end %>
        </ul>
        <% end %>
      </div>
    </section>
    <% end %>



  <main>
    <%= yield %>
  </main>


  <footer></footer>





</body>

</html>

<!DOCTYPE html>
<html>
  <head>
    <title>No Regretsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-sm bg-light">
        <div class="container-fluid">
          <ul class="navbar-nav nav-tabs">
            <li class="nav-item">
              <%= link_to "All Products", products_path %>
            </li>
            <li class="nav-item">
              <%= link_to "All Merchants", merchants_path %>
            </li>
            <li class="nav-item">
              <%= link_to "All Categories", categories_path %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fa fa-shopping-cart"></i>'.html_safe, orders_path %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if session[:user_id] %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  My Account
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <%= link_to "Manage Products", merchant_path(session[:user_id]), class: "dropdown-item" %>
                  <a class="dropdown-item" href="#">Order Fulfillment</a>
                  <div class="dropdown-divider"></div>
                  <%= link_to "Log out", logout_path, method: "delete", class: "dropdown-item" %>
                </div>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login with Github", "/auth/github" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <% if flash[:result_text] or flash[:messages] %>
      <section class="alert__container">
        <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
          <span><%= flash[:status].to_s == "failure" ? "A problem occurred: " : "" %><%= flash[:result_text] %></span>
          <% if flash[:messages] %>
            <ul>
              <% flash[:messages].each do |name, problems| %>
                <% problems.each do |problem| %>
                  <li><%= name %>: <%= problem %></li>
                <% end %>
              <% end %>
            </ul>
          <% end %>
        </div>
      </section>
    <% end %>

    <main>
      <%= yield %>
    </main>
  </body>
</html>

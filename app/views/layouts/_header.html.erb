<header class="all-pages">
  <nav class="navbar navbar-light bg-light navbar-expand-md fixed-top scrolling-navbar">
    <!-- <div class="container"> -->
      <%= link_to '<i class="fa fa-home fa-lg"></i>'.html_safe, root_path, class: "navbar-brand navbar-light" %>
      <form class="form-inline">
        <div class="md-form my-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
        </div>
      </form>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to "Products", products_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Merchants", merchants_path, class: "nav-link" %>
          </li>
          <!-- <li class="nav-item">
            <%= link_to "Categories", categories_path, class: "nav-link" %>
          </li> -->
          <% if session[:user_id] %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                My Account
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to "Manage Products", merchant_path(session[:user_id]), class: "dropdown-item" %>
                <a class="dropdown-item" href="#">Order Fulfillment</a>
                <div class="dropdown-divider"></div>
                <%= link_to "Log out", logout_path, method: "delete", class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", "/auth/github", class: "nav-link"%>
            </li>
          <% end %>
          <li class="nav-item">
            <%# if session[:order_id] %>
              <%= link_to '<i class="fa fa-shopping-cart"></i>'.html_safe, order_path(session[:order_id]), class: "nav-link d-inline-block" %>
              <% if @current_order.orderitems.size > 0 %>
                <span class="badge badge-info badge-pill d-inline-block"><%= @current_order.orderitems.size %></span>
              <% end %>
            <%# else %>
              <%# link_to '<i class="fa fa-shopping-cart"></i>'.html_safe, root_path, class: "nav-link" %>
            <%# end %>
          </li>
        </ul>
      </div>
    <!-- </div> -->
  </nav>
</header>

<% if item.errors.any? %>
  <ul class="errors">
    <% item.errors.messages.each do |column, problem_list| %>
      <% problem_list.each do |problem| %>
        <li>
          <strong>
            <%= column.capitalize %>
          </strong>
          <%= problem %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>

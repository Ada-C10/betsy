<h2> Orders Summary: </h2>


  <% if @login_user != nil %>
  <!-- these need to be filtered by revenue, order status, total orders -->
  <table>
    <thead>
      <td>
    <th>Total Revenue: $</th>
    </td>
    <td>
      by status Paid: $
    </td>
    <td>
      by status Completed: $
    </td>
  </table>

<br>

  <table>
    <td>
      <th>Total Orders: </th>
    </td>
    <td>
      Orders Paid:
    </td>
    <td>
      Orders Completed:
    </td>
  </table>

<br>

  <table>
    <td>
      <th>Filter by Status: All Orders --toggle-- </th>
    </td>
    <td>
      Paid:
    </td>
    <td>
      Complete:
    </td>
  </table>
  <% end %>



  <h2>Orders</h2>

<table>
  <tr class="order-header">
    <th>Order ID</th>
    <th>Purchase Date</th>
    <th>Items</th>
    <th>Current Status</th>
    <th>Ship Status</th>

  </tr>
  <% @orders.each do |order| %>
  <tr class="order-row">
    <td>
      <%= link_to order.id, order_path(order.id) %>
    </td>
    <td>
      <%= order.created_at.strftime("%m/%d/%Y") %>
    </td>
    <td>
      <ul class="order-items">
      <% order.order_items.each do |item| %>
      <li>
        <%= item.product.name %>
        <%= item.quantity %>
        <%= "$#{item.product.price * item.quantity}" %>
      </li>
      <% end %>
      </ul>
    </td>
    <td>
      <%= order.payment_status %>
    </td>
    <td>
      <!-- Shipped button needs to toggle to ship -->
      <%= link_to "Mark as shipped", edit_product_path(order.id),
      class: "btn btn-danger"%>
    </td>


  </tr>
  <% end %>
</table>

<div class="merchant-products">
  <h3>Products</h3>
  <table class="table merchant-products-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
    <% @merchant.products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product.id)%></td>
        <td><%= product.description%></td>
        <td><%= product.category%></td>
        <td>$ <%= product.price%></td>
        <td><%= product.stock%></td>
        <td><%= product.rating%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

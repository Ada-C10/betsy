<h2>Order History</h2>
<% if @orderitems["complete"] %>
<h4>Hey you. You're amazing. You have an all-time total of <%= @completeitems.count %> complete orders.</h4>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Order</th>
      <th scope="col">Number of items</th>
      <th scope="col">Order Placed</th>
      <th scope="col">Sales</th>
      <th scope="col">Undo</th>
    </tr>
  </thead>
  <tbody>
    <% @completeitems.each do |order_id, items| %>
    <% order = Order.find_by(id: order_id) %>
    <tr>
      <td><%=order.id%></td>
      <td><%=order.orderitems.count%></td>
      <td><%= readable_date(order.created_at) %></td>
      <td><%= readable_cost(order.total_cost) %></td>
      <td>button</td>
      <% end %>
    </tr>
  </tbody>
</table>
<% else %>
  <p>You have no orders in your order history.</p>
<% end %>

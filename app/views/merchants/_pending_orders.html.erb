<div class="merchant-products">
  <h3>Pending Order Items &nbsp Count: <%= "#{@merchant.pending_order_items.length}" %></h3>
  <table class="table merchant-products-table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Product ID</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @merchant.pending_order_items.each do |item| %>
        <% if item.status == "pending" %>
          <tr>
            <td><%= link_to item.id, order_path(item.id) %></td>
            <td><%= item.product_id %></td>
            <td><%= item.product.description %></td>
            <td><%= item.quantity %></td>
            <td><%= item.price %></td>
            <td><%= item.status %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="merchant-products">
  <h3>Paid Order Items &nbsp Count: <%= "#{@merchant.paid_order_items.length}" %></h3>
  <table class="table merchant-products-table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Product ID</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Status</th>
        <th>      </th>
      </tr>
    </thead>
    <tbody>
      <% @merchant.paid_order_items.each do |item| %>
          <tr>
            <td><%= link_to item.order.id, order_path(item.order.id) %></td>
            <td><%= link_to item.product_id, product_path(item.product_id) %></td>
            <td><%= item.product.description %></td>
            <td><%= item.quantity %></td>
            <td><%= item.price %></td>
            <td><%= item.status %></td>
            <td><%= link_to "Fulfill order", order_items_status_path(item.id), method: :post, class: 'btn btn-primary' %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

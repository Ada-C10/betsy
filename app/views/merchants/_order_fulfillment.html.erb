<div class="container">
  <div class="jumbotron text-center">
    <h7>New Sales</h7>
  </div>
</div>
<br>

<div class="container">
  <% if @orderitems["paid"] %>
    <div class="d-flex w-100 justify-content-between mb-3">
    <h3>It's time to ship.</h3>
      <button class="btn btn-primary btn-lg active" type="button" data-toggle="collapse" data-target="#collapseOrderDetails" aria-expanded="false" aria-controls="collapseOrderDetails">
        Toggle Quickview
      </button>
    </div>

    <div class="btn-group-vertical btn-block" role="group" aria-label="eachOrder">
      <% @paiditems.each do |order_id, items| %>
      <% order = Order.find_by(id: order_id) %>



        <a class="btn btn-light btn-lg my-1 row" role="button" href=<%= merchant_customer_path(@merchant.id, order_id) %>>
           <div class="col-4 col-sm-3 col-md-2 col-xl-1">
             <div class="d-flex justify-content-end">
               order <%= order_id %></div></div>
        </a>

        <div class="collapse" id="collapseOrderDetails">
          <div class="card card-body d-block">
            <ul>
              <li><%= items.size %> products</li>
              <li><%= orderitems_total_quantity(items) %> total items</li>
              <li>Order placed on <%= readable_date(order.created_at) %></li>
              <li>Total sales: <%= readable_cost(order.total_cost) %></li>
            </ul>
          </div>
        </div>

      <% end %>
    </div>


  <% else %>
    <h3>You're all caught up!</h3>
  <% end %>

</div>

<div class="container">
  <div class="jumbotron text-center">
    <h7>New Sales</h7>
  </div>
</div>
<br>

<div class="container">
  <% if @orderitems["paid"] %>
    <div class="d-flex justify-content-between mb-3">
    <h3>It's time to ship.</h3>
      <button class="btn btn-outline-info active mr-3" type="button" data-toggle="collapse" data-target="#collapseOrderDetails" aria-expanded="false" aria-controls="collapseOrderDetails">
        Display 1-page summary
      </button>
    </div>

    <div class="btn-group-vertical btn-block" role="group" aria-label="eachOrder">
      <% @paiditems.each do |order_id, items| %>
      <% order = Order.find_by(id: order_id) %>



        <a class="btn btn-light btn-lg my-2 row" role="button" href=<%= merchant_customer_path(@merchant.id, order_id) %>>
          <div class="col-6 col-sm-4 col-md-3 col-xl-2">
            <div class="d-flex justify-content-end">
              <h5 class="m-0 p-0">ORDER <%= order_id %></h5>
            </div>
            <ul class="quickview mb-0">
              <li><%= orderitems_total_quantity(items) %> total items</li>
              <li><%= items.size %> products</li>
              <li>Order placed on <%= readable_date(order.created_at) %></li>
              <li>Total sales: <%= readable_cost(order.total_cost) %></li>
            </ul>
          </div>
        </a>
        <%= image_tag "/images/icons/icon-invoice.jpg", alt: "invoice icon", class: "fulfillment-icon icon-invoice" %>
        <%= image_tag "/images/icons/icon-shipped.jpg", alt: "shipped order icon", class: "fulfillment-icon icon-shipped" %>




        <div class="collapse" id="collapseOrderDetails">
          <div class="card card-body mb-0">
            <ul class="quickview mb-0">
              <li><%= orderitems_total_quantity(items) %> total items</li>
              <li><%= items.size %> products</li>
              <li>Order placed on <%= readable_date(order.created_at) %></li>
              <li>Total sales: <%= readable_cost(order.total_cost) %></li>
            </ul>
          </div>
        </div>

      <% end %>
    </div>


  <% else %>
    <h3>You're all caught up!</h3>
  <% end %>

</div>

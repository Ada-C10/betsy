<section class="merchant-detail-summary">
  <div class="dasboard-container">

    <h2>Merchant Summary:</h2>
    <h3>Name: <%= @merchant.username %></h3>
    <p>Joined site on: <%= @merchant.created_at.strftime("%B %d, %Y") %></p>
  </div>

  <span class="tags">
    <%= link_to "Add new product", new_merchant_product_path(@merchant.id), class: "new_product" %></span>
    <span class="span"><%= link_to "Add new category", new_category_path, class: "new_category" %></span>
  </div>
</section>

<div class="merchant-table-container">

  <table class="merchant_table">
    <h3>Merchant <%= @merchant.username %>'s Dashboard</h3>
    <tr>
      <th>Order #s</th>
      <th>Generated Order Revenue</th>
      <th>Created on:</th>
      <th>Order Status</th>
    </tr>

    <% @merchant.orders.each do |order| %>
    <% i = 0 %>
    <%= i += 1 %>
    <tr>
      <th><%= order.email %></th>
      <th><%= order.id %></th>
      <th><%= order.created_at.strftime("%B %d, %Y") %></th>
      <th><%= order.status %></th>
      <% end %>
    </tr>
  </table>
</div>

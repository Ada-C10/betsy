<h6>List of Products</h6>

<nav class="top">
  <ul>
    <li><%= link_to "All Products", products_path%></li>
    <% if @current_user.is_a_merchant? %>
      <li><%= link_to "Add New Category", new_category_path%></li>
      <li><%= link_to "Add New Product", new_product_path%></li>
    <%end%>

  </ul>
  <h6>Category</h6>
  <ul>
  <% Category.all.each do |category|%>
     <li><%= link_to "#{category.name}", bycategory_path(category.id) %></li>
  <%end%>
  </ul>

  <h6>Merchant</h6>
  <ul>
  <% Merchant.all.each do |merchant|%>
     <li><%= link_to "#{merchant.name}", bymerchant_path(merchant.id) %></li>
  <%end%>
  </ul>
</nav>

<section >
    <table class="table-striped">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Seller</th>
          <th>Price</th>
          <th>Review</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product|%>
          <tr>
            <td><%= link_to "#{product.name}", product_path(product.id) %></td>
            <td><%= link_to "#{product.user.name}", user_path(product.user.id) %></td>
            <td><%= product.price %></td>
            <td></td>
          </tr>
        <%end%>
      </tbody>
   </table>
</section>
 
